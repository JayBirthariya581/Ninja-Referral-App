<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_admin_search_result"
    tools:context=".AdminSearchResultActivity"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">


    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_admin_search_result"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu"
        android:layout_gravity="start"
        />



    <ScrollView
        tools:context=".UserProfileActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_admin_search_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/yelight"

                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                app:navigationIcon="@drawable/ic_menu" />




            <TextView
                android:id="@+id/ttt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Personal Info"
                android:textSize="30dp"
                android:fontFamily="@font/bungee"
                android:layout_marginTop="10dp"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:orientation="vertical"
                >

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/admin_FullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Full Name"
                    android:layout_marginBottom="10dp"

                    >


                    <com.google.android.material.textfield.TextInputEditText

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:editable="false"
                        android:focusable="false"
                        android:background="#00000000"
                        android:drawableLeft="@drawable/ic_user"
                        android:drawablePadding="10dp"/>







                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/admin_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:layout_marginBottom="10dp"
                    >


                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:editable="false"
                        android:focusable="false"
                        android:background="#00000000"
                        android:drawableLeft="@drawable/ic_email"
                        android:drawablePadding="10dp"/>







                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/admin_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone Number"
                    android:layout_marginBottom="10dp"
                    >


                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:editable="false"
                        android:focusable="false"
                        android:background="#00000000"
                        android:drawableLeft="@drawable/ic_phone"
                        android:drawablePadding="10dp"/>







                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/admin_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:layout_marginBottom="10dp">


                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:editable="false"
                        android:focusable="false"
                        android:background="#00000000"
                        android:drawableLeft="@drawable/ic_pass"
                        android:drawablePadding="10dp"/>

                </com.google.android.material.textfield.TextInputLayout>












            </LinearLayout>

            <TextView
                android:id="@+id/ttt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Ninja Info"
                android:textSize="30dp"
                android:fontFamily="@font/bungee"

                />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_marginTop="-10dp"
            android:orientation="vertical">



            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/admin_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Coupon Key"
                android:layout_marginBottom="10dp"
                >


                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:focusable="false"
                    android:background="#00000000"
                    android:drawableLeft="@drawable/ic_coupon"
                    android:drawablePadding="10dp"/>







            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/admin_Earning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Earning"
                android:layout_marginBottom="10dp"
                >


                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:focusable="false"
                    android:background="#00000000"
                    android:drawableLeft="@drawable/ic_rupee2"
                    android:drawablePadding="10dp"/>







            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/admin_hold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="On Hold"
                android:layout_marginBottom="10dp"
                >


                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:focusable="false"
                    android:background="#00000000"
                    android:drawableLeft="@drawable/ic_hold"
                    android:drawablePadding="10dp"/>







            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/admin_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Total coupons"
                android:layout_marginBottom="10dp"
                >


                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:focusable="false"
                    android:background="#00000000"
                    android:drawableLeft="@drawable/ic_total"
                    android:drawablePadding="10dp"/>







            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/admin_used"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Used"
                android:layout_marginBottom="10dp"
                >


                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:focusable="false"
                    android:background="#00000000"
                    android:drawableLeft="@drawable/ic_used"
                    android:drawablePadding="10dp"/>







            </com.google.android.material.textfield.TextInputLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/btn_update_coupons"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:text="Edit Ninja Details"/>


        </LinearLayout>

        </LinearLayout>


    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>